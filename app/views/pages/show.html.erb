<% @page_title = "Page "+@page.name %>
<div>
	<%= link_to("<<Back to pages", subject_pages_path(@subject), :class => 'back-link') %>
	<h2>Show Page '<%=@page.name %>'</h2>

	<div class="pages show">
		<h2>Show Page</h2>

		<table summary="Page detail view">
		<tr>
			<th>Name</th>
			<td><%= @page.name %></td>
		</tr>
		<tr>
			<th>Subject ID</th>
			<td><%= @page.subject_id %></td>
		</tr>
		<tr>
			<th>Permalink</th>
			<td><%= @page.permalink %></td>
		</tr>
		<tr>
			<th>Position</th>
			<td><%= @page.position %></td>
		</tr>
		<tr>
			<th>Visible</th>
			<td><%= @page.visible ? 'Yes' : 'No' %></td>
		</tr>
		<tr>
			<th>Created</th>
			<td><%= @page.created_at %></td>
		</tr>
		<tr>
			<th>Updated</th>
			<td><%= @page.updated_at %></td>
		</tr>
	</table>
	</div>
</div>