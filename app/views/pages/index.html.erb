<% if !flash[:notice].blank? %>
	<div>
		<%= flash[:notice] %>
	</div>
<%end%>
<%= link_to("Add new Page", new_page_path(:subject_id => @subject.id)) %>
<div>
	<table>
		<tr>
			<th>#</th>
			<th>Subject ID</th>
			<th>Name</th>
			<th>Permalink</th>
			<th>Visible</th>
			<th>Sections</th>
			<th>Actions</th>
		</tr>
		<% @pages.each do |page| %>
		<tr>
			<td><%= page.position %></td>
			<td><%= page.subject_id %></td>
			<td><%= page.name %></td>
			<td><%= page.permalink %></td>
			<td><%= page.visible ? 'Yes' : 'No'%>
			<td><%= page.sections.size %></td>
			</td>
			<td>
				<%= link_to("View Sections", sections_path(:page_id => page.id)) %> | 
				<%= link_to("Show", page_path(page, :subject_id => @subject.id)) %> | 
				<%= link_to("Edit", edit_page_path(page, :subject_id => @subject.id)) %> | 
				<%= link_to("Delete", delete_page_path(page, :subject_id => @subject.id)) %>
			</td>
		</tr>
		<% end %>
	</table>
</div>