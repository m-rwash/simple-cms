<% @page_title = "Edit "+@page.name+" Page" %>
<%= link_to("<< Back to Pages List", subject_pages_path(@subject), :class => 'back-link') %>

<div class="pages edit">
	<%= form_for(@page, :url => subject_page_path(@page, @subject)) do |f| %>
		
		<%= render(:partial => 'form', :locals =>{:f => f}) %>

	<div class="form-buttons">
      <%= f.submit("Update Page") %>
    </div>
	<% end %>
</div>