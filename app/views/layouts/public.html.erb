<!DOCTYPE html>
<html>
	<head>
		<title>Simple CMS <%= " | #{@page_title}" if @page_title %></title>
		<%= stylesheet_link_tag('application', :media => 'all') %>
	</head>
	<body>
		<div id="header">
			<h2>Simple CMS</h2>
		</div>
		<div id="main">

			<div id="navigation">
				<%= render(:partial =>'layouts/navigation', :locals =>{:subjects => @subjects}) %>
			</div>
			
			<div id="content">
				<%= yield %>
			</div>
			<div class="clear"></div>
			
			<div id="footer">
				<p id="copyright">MMR</p>
			</div>
		</div>
	</body>
</html>