<% @page_title = "All Sections" %>


<div class="sections index">
	<h2>Sections for page: <%=@page.name%></h2>
	<%= link_to("Add new Section", new_subject_page_section_path(@subject, @page), :class => 'action new') %>
	<table class="listing" summary="Section list">
		<tr class="header">
			<th>#</th>
			<th>Page ID</th>
			<th>Section</th>
			<th>Visible</th>
			<th>Actions</th>
		</tr>
		<% @sections.each do |section|%>
		<tr>
			<td><%= section.position %></td>
			<td><%= section.page_id %></td>
			<td><%= section.name %></td>
			<td class="center"><%= status_tag(section.visible) %></td>
			<td class="actions">
				<%= link_to("Show", subject_page_section_path(@subject, @page ,section), :class => 'action show') %> | 
				<%= link_to("Edit", edit_subject_page_section_path(@subject, @page ,section), :class => 'action edit') %> | 
				<%= link_to("Delete", delete_subject_page_section_path(@subject, @page ,section), :class => 'action delete') %>
			</td>
		</tr>
		<% end %>
	</table>
</div>