<% @page_title = "Delete "+@section.name+" Section" %>
<%= link_to("<< Back to List", subject_page_sections_path(@subject, @page), :class => 'back-link') %>
<div class="sections delete">
	<h2>Delete Section</h2>
	<%= form_for(@section, :url => subject_page_section_path(@subject, @page, @section),:method => 'delete') do |f| %>
	 	<p>Are you sure you want to delete this section?</p>
	 	<p class="reference-name"><%= @section.name %></p>

	 	<div class="form-buttons">
	 		<%= f.submit("Delete Section") %>
	 	</div>

	<%end%>
</div>