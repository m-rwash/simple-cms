<% @page_title = "Section "+@section.name %>
<%= link_to("Back to Sections List", subject_page_sections_path(@subject, @page)) %>

<div>
	<h2> Show Section ' <%= @section.name %>'</h2>

	<table>
		<tr>
			<th>Name</th>
			<td><%= @section.name %></td>
		</tr>
		<tr>
			<th>Page ID</th>
			<td><%= @section.page_id %></td>
		</tr>
		<tr>
			<th>Position</th>
			<td><%= @section.position %></td>
		</tr>
		<tr>
			<th>Visible?</th>
			<td><%= @section.visible ? 'Yes' : 'No' %></td>
		</tr>
		<tr>
			<th>Content Type</th>
			<td><%= @section.content_type %></td>
		</tr>
		<tr>
			<th>Content</th>
			<td><%= @section.content %></td>
		</tr>
	</table>
</div>